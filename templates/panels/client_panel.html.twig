{% extends 'base.html.twig' %}

{% block title %}HandyHub | Mi cuenta{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('panels-css') }}
    {{ encore_entry_link_tags('table') }}
{% endblock %}

{% block body %}
    <div id="logo">
        <a class="panel-logo" href="{{ path('app_index') }}">
            <span class="big-logo">HandyHub</span>
            <span class="small-logo">HH</span>
        </a>
    </div>
    <div id="left-menu">
        <ul>
            <li id="users-page" class="active">
                <a href="#">
                    <span class="material-icons">
                        person
                    </span>
                    <h3>Mi cuenta</h3>
                </a>
            </li>
            <li id="contracts-page">
                <a href="#">
                    <span class="material-icons">
                        description
                    </span>
                    <h3>Contratos</h3>
                </a>
            </li>
            <li>
                <a href="{{ path('app_logout') }}">
                    <span class="material-icons">
                        logout
                    </span>
                    <h3>Logout</h3>
                </a>
            </li>
        </ul>
    </div>
    <div id="main-content">
        <div id="header">
            <div class="header-left float-left">
                <span id="toggle-left-menu" class="material-icons">
                    menu
                </span>
            </div>
            <div class="dropdown">
                <img class="user-image" src="" alt="User image" />
                <p>Hola, <span style="color: var(--red-color)"></span></p>
            </div>
        </div>

        <div id="page-container">
            <div id="content-users-page" class="page active">
                <div class="card w-35">
                    <form action="{{ path('') }}" method="post" class="form-layer">
                        <div class="form-item">
                            <label for="name">Nombre</label>
                            <input type="text" id="name" name="name" required>
                        </div>
                        <div class="form-item">
                            <label for="surname">Apellidos</label>
                            <input type="text" id="surname" name="surname" required>
                        </div>
                        <div class="form-item">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required>
                            <div id="email-error" class="error"></div>
                        </div>
                        <div class="form-item form-item--pass">
                            <label for="password">Contraseña</label>
                            <input type="password" id="password" name="password" required>
                        </div>
                        <div class="form-item form-item--pass">
                            <label for="confirm_password">Confirmar contraseña</label>
                            <input type="password" id="confirm_password" name="confirm_password" required>
                            <div id="password-error" class="error"></div>
                        </div>
                        <div class="form-item">
                            <label for="address">Dirección</label>
                            <input type="text" id="address" name="address" required>
                        </div>
                        <div class="form-item">
                            <label for="telephone">Teléfono</label>
                            <input type="tel" id="telephone" name="telephone" required>
                        </div>
                        <div class="form-item form-item--image">
                            <label for="imagen">Imagen</label>
                            <input type="file" id="imagen" name="image">
                        </div>
                        <div class="form-item credit-card">
                            <fieldset>
                                <legend>Tarjeta</legend>
                                <div>
                                    <label for="creditNumber">Número:</label>
                                    <input type="number" id="creditNumber" min="16" max="16" name="creditNumber" required>
                                </div>
                                <div>
                                    <label for="creditName">Nombre:</label>
                                    <input type="text" id="creditName" name="creditName" required>
                                </div>
                                <div>
                                    <label for="creditExpire">Expiración:</label>
                                    <input type="text" id="creditExpire" name="creditExpire" required>
                                </div>
                                <div>
                                    <label for="creditCvv">CVV:</label>
                                    <input type="number" id="creditCvv" name="creditCvv" required>
                                </div>
                            </fieldset>
                        </div>

                        <div class="form-item button">
                            <input type="submit" name="submit" value="Actualizar">
                        </div>
                    </form>
                </div>
            </div>
            <div id="content-contracts-page" class="page">
                <div class="card">
                    <table>
                        <caption>Contrato</caption>
                        <thead>
                            <tr>
                                <th scope="col">Contrato</th>
                                <th scope="col">Cliente</th>
                                <th scope="col">Profesional</th>
                                <th scope="col">Fecha</th>
                                <th scope="col">Hora de comienzo</th>
                                <th scope="col">Hora de fin</th>
                                <th scope="col">Precio por hora</th>
                                <th scope="col">Impuestos</th>
                                <th scope="col">Total</th>
                                <th scope="col">Estado</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for contract in contracts %}
                            <tr>
                                <td data-label="Contrato">{{ contract.id }}</td>
                                <td data-label="Cliente">{{ contract.client }}</td>
                                <td data-label="Profesional">{{ contract.specialist }}</td>
                                <td data-label="Fecha">{{ contract.date }}</td>
                                <td data-label="Hora de comienzo">{{ contract.hourIn }}</td>
                                <td data-label="Hora de fin">
                                    {% if contract.status != 'in_progress' %}
                                        {{ contract.hourOut }}
                                    {% endif %}
                                </td>
                                <td data-label="Precio por hora">{{ contract.pricePerHour }}</td>
                                <td data-label="Impuestos">{{ contract.tax }}</td>
                                <td data-label="Total">{{ contract.totalPrice }}</td>
                                <td data-label="Estado">
                                    {% if contract.status == 'in_progress' %}
                                        <span class="in-progress">In Progress</span>
                                    {% elseif contract.status == 'completed' %}
                                        <span class="completed">Completed</span>
                                    {% endif %}
                                </td>
                                <td data-label="">
                                    {% if contract.status == 'completed' %}
                                        <button class="btn check-contract" type="button">
                                            Ver factura
                                        </button>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('panels') }}
{% endblock %}
