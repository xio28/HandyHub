{% extends 'base.html.twig' %}

{% block title %}HandyHub | Inicio{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('index') }}
{% endblock %}

{% block body %}
    {# CABECERA #}
    <header class="header">
        <div class="header__icon"><img src="{{ asset('resources/images/logo-light.png') }}" /></div>
        <nav class="header__nav">
            <ul>
                <li><a href="#">Inicio</a></li>
                <li><a href="#">Quiénes somos</a></li>
                <li><a href="#">Servicios</a></li>
                <li><a href="#">Soporte</a></li>
            </ul>
        </nav>
        <div class="header__button">
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <div>
                    <img src="{{ asset(app.user.image) }}" alt="User image" />
                    <ul class="dropdown-menu">
                        {% if is_granted('ROLE_SUPERADMIN') or is_granted('ROLE_ADMIN') %}
                            <li>
                                <a class="dropdown-item" href="{{ path('app_admin_panel') }}">Panel de administrador</a>
                            </li>
                        {% elseif is_granted('ROLE_CLIENT') %}
                            <li>
                                <a class="dropdown-item" href="{{ path('app_client_panel') }}">Mi cuenta</a>
                            </li>
                        {% else %}
                            <li>
                                <a class="dropdown-item" href="{{ path('app_specialist_panel') }}">Mi cuenta</a>
                            </li>
                        {% endif %}
                        <li>
                            <a class="dropdown-item" href="logout">Log out</a>
                        </li>
                    </ul>
                </div>
                {# <a class="login" href="{{ path('app_logout') }}">Logout</a> #}
            {% else %}
                {# <a href="{{ path('app_login') }}">Login</a> #}
                <a class="login" href="{{ path(register) }}">Login</a>
            {% endif %}
        </div>
    </header>

    {# CONTENIDO #}
    <main class="main">
        <div class="main__container">
            <div class="main__container__title">
                <h2><span>Servicios profesionales</span></h2>
                <h2>a un solo clic</h2>
            </div>
            <div class="main__container__search">
                <form class="form__search" action="">
                    <input type="text" placeholder="¿Qué necesitas?">
                    <button type="submit">Buscar</button>
                </form>
            </div>
        </div>
        <section class="most-popular">
            {% for specialist in specialists %}
                <div class="card-item">
                    <figure>
                        <img src="{{ specialist.image }}" alt="imagen">
                        <figcaption>imagen{{ specialist._id }}</figcaption>
                    </figure>
                </div>
            {% endfor %}
