<form method="POST" action="{{ path({{ controllerName }}) }}" enctype="multipart/form-data" id="form">

    {% block admin %}
    <div>
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="name" required>
    </div>
    <div>
        <label for="apellidos">Apellidos:</label>
        <input type="text" id="apellidos" name="surname" required>
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <div id="email-error" class="error"></div>
    </div>
    <div>
        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" required>
    </div>
    <div>
        <label for="confirm_password">Confirmar contraseña:</label>
        <input type="password" id="confirm_password" name="confirm_password" required>
        <div id="password-error" class="error"></div>
    </div>
    <div>
        <label for="imagen">Imagen:</label>
        <input type="file" id="imagen" name="image">
    </div>
    {% endblock %}

    {% block specialist %}
    <div>
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="name" required>
    </div>
    <div>
        <label for="apellidos">Apellidos:</label>
        <input type="text" id="apellidos" name="surname" required>
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <div id="email-error" class="error"></div>
    </div>
    <div>
        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" required>
    </div>
    <div>
        <label for="confirm_password">Confirmar contraseña:</label>
        <input type="password" id="confirm_password" name="confirm_password" required>
        <div id="password-error" class="error"></div>
    </div>
    <div>
        <label for="telephone">Teléfono:</label>
        <input type="tel" id="telephone" name="telephone" required>
    </div>
    <div>
        <select id="category-select" name="category"></select>
    </div>
    <div>
        <label for="imagen">Imagen:</label>
        <input type="file" id="imagen" name="image">
    </div>
    <div>
        <label for="current_account">Cuenta corriente:</label>
        <input type="text" id="current_account" name="current_account" required>
    </div>
    <div>
        <input type="checkbox" id="privacy" name="privacy">
        <label for="privacy">I accept <a target="_blank" href="https://google.es">privacy policy</a> and <a target="_blank" href="https://google.es">terms</a>.</label>
    </div>
    {% endblock %}

    {% block client %}
    <div>
        <label for="name">Nombre:</label>
        <input type="text" id="name" name="name" required>
    </div>
    <div>
        <label for="surname">Apellidos:</label>
        <input type="text" id="surname" name="surname" required>
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <div id="email-error" class="error"></div>
    </div>
    <div>
        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" required>
    </div>
    <div>
        <label for="confirm_password">Confirmar contraseña:</label>
        <input type="password" id="confirm_password" name="confirm_password" required>
        <div id="password-error" class="error"></div>
    </div>
    <div>
        <label for="address">Dirección:</label>
        <input type="text" id="address" name="address" required>
    </div>
    <div>
        <label for="telephone">Teléfono:</label>
        <input type="tel" id="telephone" name="telephone" required>
    </div>
    <div>
        <label for="imagen">Imagen:</label>
        <input type="file" id="imagen" name="image">
    </div>
    <div>
        <div>
            <label for="creditNumber">Número:</label>
            <input type="number" id="creditNumber" min="16" max="16" name="creditNumber" required>
        </div>
        <div>
            <label for="creditName">Nombre:</label>
            <input type="text" id="creditName" name="creditName" required>
        </div>
        <div>
            <label for="creditExpire">Expiración:</label>
            <input type="text" id="creditExpire" name="creditExpire" required>
        </div>
        <div>
            <label for="creditCvv">CVV:</label>
            <input type="number" id="creditCvv" name="creditCvv" required>
        </div>
    </div>
    <div>
        <input type="checkbox" id="privacy" name="privacy">
        <label for="privacy">I accept <a target="_blank" href="https://google.es/">privacy policy</a> and <a target="_blank" href="https://google.es/">terms</a>.</label>
    </div>
    {% endblock %}

    {% block category %}
    <div>
        <label for="catName">Nombre:</label>
        <input type="text" id="catName" name="catName" required>
    </div>
    {% endblock %}

    <div>
        <input type="submit" name="submit" value="Enviar">
    </div>
</form>


