{% extends 'base.html.twig' %}

{% block title %}HandyHub | Registro{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('form_css') }}
{% endblock %}

{% block body %}
    <main class="principal">
        <form method="POST" action="{{ path( actionPath ) }}" enctype="multipart/form-data" id="form" class="form-layer">
            <div class="principal__logo">
                <a href="{{ path('app_index') }}"><span class="material-icons">reply</span></a>
            </div>
            <h2 class="principal__h2">Registro cliente</h2>
            <div class="form-item">
                <label for="name">Nombre</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-item">
                <label for="surname">Apellidos</label>
                <input type="text" id="surname" name="surname" required>
            </div>
            <div class="form-item">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
                <div id="email-error" class="error"></div>
            </div>
            <div class="form-item form-item--pass">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" required>
                <div id="password-error" class="error"></div>
            </div>
            <div class="form-item form-item--pass">
                <label for="confirm_password">Confirmar contraseña</label>
                <input type="password" id="confirm_password" name="confirm_password" required>
                <div id="password-error-confirm" class="error"></div>
            </div>
            <div class="form-item">
                <label for="address">Dirección</label>
                <input type="text" id="address" name="address" required>
            </div>
            <div class="form-item">
                <label for="telephone">Teléfono</label>
                <input type="tel" id="telephone" name="telephone" required>
            </div>
            <div class="form-item form-item--image">
                <label for="imagen">Imagen</label>
                <input type="file" id="imagen" name="image">
            </div>
            <div class="form-item credit-card">
                <fieldset>
                    <legend>Tarjeta</legend>
                    <div>
                        <label for="creditNumber">Número:</label>
                        <input type="number" id="creditNumber" name="creditNumber" required>
                    </div>
                    <div>
                        <label for="creditName">Nombre:</label>
                        <input type="text" id="creditName" name="creditName" required>
                    </div>
                    <div>
                        <label for="creditExpire">Expiración:</label>
                        <input type="text" id="creditExpire" name="creditExpire" required>
                    </div>
                    <div>
                        <label for="creditCvv">CVV:</label>
                        <input type="number" id="creditCvv" name="creditCvv" required>
                    </div>
                </fieldset>
            </div>
            <div class="form-item policy">
                <input class="checkbox" type="checkbox" id="privacy" name="privacy" required>
                <label class="privacy" for="privacy">I accept <a target="_blank" href="https://google.es/">privacy policy</a> and <a target="_blank" href="https://google.es/">terms</a>.</label>
            </div>

            <div class="form-item button">
                <input type="submit" name="submit" value="Enviar">
            </div>
        </form>
    </main>

{% endblock %}
