
{% extends 'base.html.twig' %}

{% block title %}HandyHub | Registro{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('form_css') }}
{% endblock %}

{% block body %}
    <main class="principal specialist">
        <form method="POST" action="{{ path( actionPath ) }}" enctype="multipart/form-data" id="form" class="form-layer">
            <div class="principal__logo">
                <a href="{{ path('app_index') }}"><span class="material-icons reply-fs">reply</span></a>
            </div>
            <h2 class="principal__h2">Bienvenido</h2>
            <div class="form-item">
                <label for="nombre">Nombre</label>
                <input type="text" id="nombre" name="name" required>
            </div>
            <div class="form-item">
                <label for="apellidos">Apellidos</label>
                <input type="text" id="apellidos" name="surname" required>
            </div>
            <div class="form-item">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
                <div id="email-error" class="error"></div>
            </div>
            <div class="form-item form-item--pass">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" required>
                <div id="password-error" class="error"></div>
            </div>
            <div class="form-item form-item--pass">
                <label for="confirm_password">Confirmar contraseña</label>
                <input type="password" id="confirm_password" name="confirm_password" required>
                <div id="password-error-confirm" class="error"></div>
            </div>
            <div class="form-item">
                <label for="telephone">Teléfono</label>
                <input type="tel" id="telephone" name="telephone" required>
            </div>
            <div class="form-item">
                <label for="telephone">Especialidad</label>
                <select id="category-select" name="category" required>
                    {% if categories is not empty %}
                        <option value="" selected disabled>-- Selecciona una opción --</option>
                        {% for category in categories %}
                            <option value="{{ category.id }}">{{ category.category }}</option>
                        {% endfor %}
                    {% else %}
                        <option value="" selected disabled>No hay datos para mostrar</option>
                    {% endif %}
                </select>
            </div>
            <div class="form-item form-item--image">
                <label for="imagen">Imagen</label>
                <input type="file" id="imagen" name="image">
            </div>
            <div class="form-item">
                <label for="price_per_hour">Precio por hora</label>
                <input type="number" id="price_per_hour" name="price_per_hour">
            </div>
            <div class="form-item">
                <label for="current_account">Cuenta corriente</label>
                <input type="text" id="current_account" name="current_account" required>
            </div>
            <div class="form-item policy">
                <input type="checkbox" id="privacy" name="privacy">
                <label class="privacy" for="privacy">Acepto la <a target="_blank" href="https://google.es">política de privacidad</a> y <a target="_blank" href="https://google.es">los términos de uso</a>.</label>
            </div>
            
            <div class="form-item button">
                <input type="submit" name="submit" value="Enviar">
            </div>
        </form>
    </main>
{% endblock %}
