{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('panels-css') }}
    {{ encore_entry_link_tags('table') }}
{% endblock %}

{% block body %}
    <div id="logo">
        <a class="panel-logo" href="{{ path('app_index') }}">
            <span class="big-logo">HandyHub</span>
            <span class="small-logo">HH</span>
        </a>
    </div>
    <div id="left-menu">
        <ul>
            <li id="users-page" class="active">
                <a href="#">
                    <span class="material-icons">
                        person
                    </span>
                    <h3>Users</h3>
                </a>
            </li>
            <li id="categories-page">
                <a href="#">
                    <span class="material-icons">
                        category
                    </span>
                    <h3>Categories</h3>
                </a>
            </li>
            <li id="contracts-page">
                <a href="#">
                    <span class="material-icons">
                        description
                    </span>
                    <h3>Contracts</h3>
                </a>
            </li>
            <li>
                <a href="{{ path('app_logout') }}">
                    <span class="material-icons">
                        logout
                    </span>
                    <h3>Logout</h3>
                </a>
            </li>
        </ul>
    </div>
    <div id="main-content">
        <div id="header">
            <div class="header-left float-left">
                <span id="toggle-left-menu" class="material-icons">
                    menu
                </span>
            </div>
            <div class="header-right float-right">
                <span class="material-icons">
                    person
                </span>
            </div>
        </div>

        <div id="page-container">
            <div id="content-users-page" class="page active">
                <div class="card">
                    <table>
                        <caption>Users</caption>
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Surname</th>
                                <th scope="col">Email</th>
                                <th scope="col">Telephone</th>
                                <th scope="col">Roles</th>
                                <th scope="col">Verified</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td data-label="ID">1596415616</td>
                                <td data-label="Name">Jacinto</td>
                                <td data-label="Surname">LÃ³pez</td>
                                <td data-label="Email">jacin@yahoo.es</td>
                                <td data-label="Telephone">900528810</td>
                                <td data-label="Roles">ROLES_ADMIN</td>
                                <td data-label="Verified"></td>
                                <td data-label="">
                                    <button class="btn">Ver factura</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div id="content-categories-page" class="page">
                <div class="w-35 pb-1">
                    <div class="flex-input">
                        <input type="text" id="category" name="category" class="category-input" placeholder="New Category">
                        <button id="addCategory" class="btn">Add</button>
                    </div>
                </div>
                <div class="card w-35">
                    <table>
                        <caption>Categories</caption>
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Category</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for category in categories %}
                                <tr>
                                    <td data-label="ID">{{ category.id }}</td>
                                    <td data-label="Name">{{ category.category }}</td>
                                    <td data-label="">
                                        <button class="btn edit-category" data-id="{{ category.id }}">
                                            <span class="material-icons">
                                                edit
                                            </span>
                                        </button>
                                        <button class="btn trash-category" data-id="{{ category.id }}">
                                            <span class="material-icons">
                                                delete_forever
                                            </span>
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div id="content-contracts-page" class="page">
                <h1>Adios</h1>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('panels') }}
{% endblock %}
